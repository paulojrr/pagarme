generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id                 String   @id @default(uuid())
  value              Float    @db.DoublePrecision
  description        String
  paymentMethod      String
  cardNumber         String
  cardHolderName     String
  validFrom          DateTime
  verificationNumber String

  @@map(name: "transactions")
}
